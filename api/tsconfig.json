{
  "ts-node": {
    "transpileOnly": true,
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "outDir": "./dist",
    "rootDirs": ["../", "./"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "../",
    "paths": {
      "*": ["*", "node_modules/*", "src/*", "src/@types/*"]
    }
  },
  "include": [
    "src/**/*",
    "../src/**/*",
    "../typings/**/*"
  ],
  "exclude": ["node_modules", "dist"],
  "typeRoots": [
  "./src/@types",
  "../typings",
  "../node_modules/@types",
  "./node_modules/@types"
]
}